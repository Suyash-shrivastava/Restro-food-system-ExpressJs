<style>
    *{
        margin: 0;
        padding: 0;
    }

    .maincontainer {
        background: rgb(28, 28, 28);
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {

        width: 100vw;
        height: 100vh;

    }

    .heading {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.8px;
        color: #c7361c;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        justify-content: space-between;
    }

    .btnstyle {
        width: 100%;
        background: #4b4a4a;
        color: white;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(0, 0, 0);
        font-weight: bold;
        font-size: 18px;
        margin-top: 20px;
    }

    .subbox {
        width: 75%;
        padding: 20px;
        background: white;
        border-radius: 20px;
    }
</style>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <div class="maincontainer">
        <div class="box row g-3">

            <div class="col-md-6">
                <img src="/images/loginimg.jpg " style="width:100%; height:100vh">
            </div>

            <div class="col-md-6"
                style=" background: rgb(28, 28, 28); display: flex; flex-direction: column; justify-content:center; align-items: center;">
                <div style="color: white; font-weight: bold; margin-bottom: 20px; font-size: 60px;">RESTRO FOOD SYSTEM
                </div>

                <div style="color: white; font-weight: bold; margin-bottom: 20px;">
                    <h1>Adminstrator Login</h1>
                </div>
                <div class="subbox">
                    <form action="/admin/chkadminlogin" method="post" >

                        <div class="col-md-12">
                            <label for="email" class="form-label"><b>Email</b></label>
                            <input type="text" required class="form-control" name="email" id="email">
                        </div>

                        <div class="col-md-12">
                            <label for="password" class="form-label"><b>Password</b></label>
                            <input type="text" required class="form-control" id="password" name="password">
                        </div>

                        <div class="col-md-12">
                        <button type="submit" class="btnstyle">Login</button>
                        </div>

                        <div class="col-md-12" style="padding: 5px; font-size: 18px; font-weight: bold; text-align: center; color: red;">
                          <%= message %>
                        </div>
                    
                    
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>

</html>