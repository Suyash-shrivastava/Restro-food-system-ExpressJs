<style>
    .maincontainer {
        background: #47413d;
        height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        background: #ffffff;
        width: 58%;
        height: auto;
        border-radius: 15px;
        padding: 18px;
    }

    .heading {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.8px;
        color: #c7361c;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        justify-content: space-between;

    }

    .btnstyle {
        width: 30%;
        background: #111111;
        color: white;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(22, 22, 22);
        font-weight: bold;
        font-size: 18px;

        margin-top: 15px;
    }
</style>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Image</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <div><img src="/images/foodhead.png" width="50px">
                    Food Image Updation</div>
                <div><a href="/food/displayfood"><img src="/images/displayrecord.png" width="35"
                            title="displayrecors"></a></div>
            </div>

            <form action="/food/editimage" method="post" enctype="multipart/form-data">
                <div>
                    <input type="hidden" value="<%=data.foodid%>" name="foodid">
                    <b>Food Id:</b>
                    <%=data.foodid%>
                        <br>
                        <b>Food Name:</b>
                        <%=data.foodname%>
                            <br>
                            <img src="/images/<%=data.image%>" width="150">
                            <br>
                            <input type="file" required name="fimg">
                            <input class="btnstyle" type="submit" value="Update Image">
                </div>
            </form>



        </div>
    </div>
</body>

</html>