<style>
    .maincontainer{
        background: #423c39;
        height: 100vh;
        width:100%;
        display:flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        background: rgb(255, 255, 255);
        width: 58%;
        height: auto;
        border-radius: 15px;
        padding: 18px;
    }

    .heading{
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.8px;
        color: #c7361c;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        justify-content: space-between;
    }

    .btnstyle{
        width: 100%;
        background: #313030;
        color: rgb(255, 255, 255);
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(78, 60, 60);
        font-weight: bold;
        font-size: 18px;
    }



</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <div class="maincontainer">
            <div class="box">
                <div class="heading">
                   <div> <img src="/images/foodhead.png" width="50px">
                    Food Updation</div>
                    <div><a href="/food/displayfood"><img src="/images/displayrecord.png" width="35" title="displayrecors"></a></div>
                </div>

                <form action="/food/food_edit_delete" method="post"  class="row g-3">

                    <input type="hidden" value="<%=data.foodid%>" name="foodid">

                    <div class="col-md-6">
                      <label for="fname" class="form-label"><b>Food Name</b></label>
                      <input type="text" class="form-control" id="fname" name="fname" value="<%=data.foodname%>">
                    </div>

                    <div class="col-md-6">
                        <label for="ftype" class="form-label"><b>Type</b></label>
                        <select id="ftype" name="ftype" class="form-select">
                          <option><%=data.type%></option>
                          <option>Indian-Veg</option>
                          <option>Non-Veg</option>
                          <option>South-Indian</option>
                          <option>Chinese Food</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="fquantity" class="form-label"><b>Food Quantity</b></label>
                        <select id="fquantity" name="fquantity" class="form-select">
                          <option ><%=data.quantity%></option>
                          <option>Half</option>
                          <option>Full</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="fprice" class="form-label"><b>Food Price</b></label>
                        <input type="text" class="form-control" id="fprice" name="fprice" value="<%=data.price%>">
                    </div>

                    <div class="col-md-6">
                        <label for="desc" class="form-label"><b>Description</b></label>
                        <input type="text" class="form-control" id="desc" name="desc" value="<%=data.description%>">
                    </div>

                    <div class="col-md-6">
                        <label for="foffer" class="form-label"><b>Offer</b></label>
                        <input type="text" class="form-control" id="foffer" name="foffer" value="<%=data.offer%>">
                    </div>

                
                    <div class="col-md-6">
                        <button type="submit" name="btn" value="edit" class=" btnstyle"><b>Edit</b></button>
                    </div>

                    <div class="col-md-6">
                    <button type="submit" name="btn" value="delete" class=" btnstyle"><b>Delete</b></button>
                    </div>

                </form>    
            </div>
        </div>
</body>
</html>