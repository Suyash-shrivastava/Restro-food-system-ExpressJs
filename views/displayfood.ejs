<style>
    .maincontainer {
        background: #45423d;
        height: 100vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        background: white;
        width: 75%;
        height: auto;
        border-radius: 15px;
        padding: 18px;
    }

    .heading {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.8px;
        color: #c7361c;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        justify-content: space-between;

    }

    .btnstyle {
        width: 100%;
        background: #e04c31;
        color: white;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(213, 138, 138);
        font-weight: bold;
        font-size: 18px;
    }
</style>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Food</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <div><img src="/images/foodhead.png" width="50px">
                    List Of Food</div>
                <div><a href="/food/foodregister"><img src="/images/addrecords.png" width="40" title="addrecords"></a></div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Food Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Offer</th>
                        <th scope="col">Image</th>
                        <th scope="col">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <% data.map((item)=>{ %>
                        <tr>
                            <th scope="row">
                                <%= item.foodname%>
                            </th>
                            <td>
                                <%=item.type%>
                            </td>
                            <td>
                                <%=item.quantity%>
                            </td>
                            <td>
                                <%=item.price%>
                            </td>
                            <td>
                                <%=item.description%>
                            </td>
                            <td>
                                <%=item.offer%>
                            </td>
                            <td><a href="/food/searchbyidforimage?fid=<%=item.foodid%>"><img src='/images/<%= item.image %>' width="60"></a></td>
                            <td><a href="/food/searchbyid?fid=<%=item.foodid%>">Edit/Delete</a></td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>

        </div>
    </div>
</body>

</html>