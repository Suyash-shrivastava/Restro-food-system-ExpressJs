<style>
    .maincontainer{
        background: #373431;
        height: 100vh;
        width:100%;
        display:flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        background: #ffffff;
        width: 58%;
        height: auto;
        border-radius: 15px;
        padding: 18px;
    }

    .heading{
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.8px;
        color: #c7361c;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        justify-content: space-between;
        
    }

    .btnstyle{
        width: 100%;
        background: #111111;
        color: white;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(22, 22, 22);
        font-weight: bold;
        font-size: 18px;
    }



</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <div class="maincontainer">
            <div class="box">
                <div class="heading">
                    <div><img src="/images/foodhead.png" width="50px">
                    Food Register</div>
                    <div><a href="/food/displayfood"><img src="/images/displayrecord.png" width="40" title="displayrecord"></a></div>

                </div>

                <form action="/food/foodsubmit" method="post" enctype="multipart/form-data" class="row g-3">
                    <div class="col-md-6">
                      <label for="fname" class="form-label"><b>Food Name</b></label>
                      <input type="text" class="form-control" id="fname" name="fname">
                    </div>

                    <div class="col-md-6">
                        <label for="ftype" class="form-label"><b>Type</b></label>
                        <select id="ftype" name="ftype" class="form-select">
                          <option selected>Choose Type...</option>
                          <option>Indian-Veg</option>
                          <option>Non-Veg</option>
                          <option>South-Indian</option>
                          <option>Chinese Food</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="fquantity" class="form-label"><b>Food Quantity</b></label>
                        <select id="fquantity" name="fquantity" class="form-select">
                          <option selected>Choose Qty...</option>
                          <option>Half</option>
                          <option>Full</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="fprice" class="form-label"><b>Food Price</b></label>
                        <input type="text" class="form-control" id="fprice" name="fprice">
                    </div>

                    <div class="col-md-12">
                        <label for="desc" class="form-label"><b>Description</b></label>
                        <input type="text" class="form-control" id="desc" name="desc">
                    </div>

                    <div class="col-md-6">
                        <label for="foffer" class="form-label"><b>Offer</b></label>
                        <input type="text" class="form-control" id="foffer" name="foffer">
                    </div>

                    <div class="col-md-6">
                        <label for="fimg" class="form-label"><b>Food Image</b></label>
                        <input type="file" class="form-control" id="fimg" name="fimg">
                    </div>

                    <div class="col-md-6">
                        <button type="submit"  class=" btnstyle"><b>Submit</b></button>
                    </div>

                    <div class="col-md-6">
                    <button type="reset" class=" btnstyle"><b>Reset</b></button>
                    </div>

                    <div class="col-md-12" style="display: flex; justify-content: center; font-weight: bold;padding-top: 5px;">
                        <%= message %>

                    </div>


                </form>    
            </div>
        </div>
</body>
</html>